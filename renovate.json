{
  "extends": [
    "config:base"
  ],
  "assignees": ["@emmercm"],
  "pinDigests": true,
  "automerge": true,
  "packageRules": [
    {
      "paths": [".circleci/**"],
      "enabled": false
    },
    {
      "paths": ["**/Dockerfile"],
      "major": {
        "enabled": false
      },
      "separateMajorMinor": true,
      "minor": {
        "enabled": true
      },
      "separateMinorPatch": true,
      "patch": {
        "enabled": true
      }
    }
  ]
}
